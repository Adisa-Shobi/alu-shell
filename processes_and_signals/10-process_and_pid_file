#!/usr/bin/env bash
# Bash script
echo $$ > /var/run/myscript.pid
term() {
    echo "I hate the kill command"
    rm /var/run/myscript.pid
    exit
}
int() {
    echo "Y U no love me?!"
}
quit() {
    rm /var/run/myscript.pid
    exit
}
trap int SIGINT
trap quit SIGQUIT
trap term SIGTERM
while true;
do
    echo "To infinity and beyond"
    sleep 2
done
